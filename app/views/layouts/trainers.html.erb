<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title yield(:title) %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "manager/managers", media: "all",
      "data-turbolinks-track": "reload" %>
    <%= javascript_pack_tag "manager/manager",
      "data-turbolinks-track": "reload" %>
    <%= javascript_tag do %>
      I18n.locale = "<%= I18n.locale %>";
    <% end %>
    <%= javascript_pack_tag "manager/translations/#{I18n.locale}" %>
    <%= javascript_pack_tag "manager/room" %>
  </head>
  <body>
    <div id="wrapper">
      <%= render "trainers/header"%>
      <div id="page-wrapper">
        <div class="container-fluid">
          <%= render "shared/flash_message" %>
          <%= yield %>
        </div>
      </div>
    </div>
  </body>
</html>
