<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title yield(:title) %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link href="<%= Settings.link_font_awesome %>" rel="stylesheet">
    <script>document.getElementsByTagName("html")[0].className += " js";</script>
    <%= stylesheet_link_tag "business/business", media: "all", "data-turbolinks-track": "reload" %>
  </head>
  <body>
    <%= render "business/layouts/header"%>
    <div class="banner">
      <div class="container">
        <% flash.each do |message_type, message| %>
          <div class="alert alert-<%= message_type %>"><%= message %></div>
        <% end %>
      </div>
    </div>
    <%= yield %>
    <%= render "business/layouts/footer"%>
    <script src="https://unpkg.com/codyhouse-framework/main/assets/js/util.js"></script>
    <%= javascript_pack_tag "business/business", "data-turbolinks-track": "reload" %>
  </body>
</html>
