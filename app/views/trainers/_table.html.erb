<div class="panel panel-default">
  <div class="panel-heading">
    <%= link_to trainers_root_path do %>
      <%= t ".table_name" %>
    <% end %>
  </div>
  <div class="panel-body">
    <% if @events.present? %>
      <div class="table-responsive">
        <table class="table table-bordered table-hover" id="table-event">
          <thead>
            <tr>
              <th class="text-center">#</th>
              <th class="text-center"><%= t ".title" %></th>
              <th class="text-center"><%= t ".description" %></th>
              <th class="text-center"><%= t ".message" %></th>
              <th class="text-center"><%= t ".author" %></th>
              <th class="text-center"><%= t ".room" %></th>
              <th class="text-center"><%= t ".date_event" %></th>
              <th class="text-center"><%= t ".time_start" %></th>
              <th class="text-center"><%= t ".time_end" %></th>
              <th class="text-center"><%= t ".status" %></th>
              <th class="text-center"><%= t ".status" %></th>
            </tr>
          </thead>
          <tbody>
            <%= render @events %>
          </tbody>
        </table>
        <%= paginate @events, theme: "twitter-bootstrap-3"%>
        <p class="help-block">
          <%= t(".total_record") %>: <%= @events.total_count %> -
          <%= page_sum @events %>
        </p>
        <p class="help-block"><%= record_sum @events %></p>
      </div>
    <% else %>
      <p class="help-block"><%= t ".no_event" %></p>
    <% end %>
  </div>
</div>
