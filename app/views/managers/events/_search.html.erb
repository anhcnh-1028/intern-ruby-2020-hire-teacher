<%= form_tag managers_events_path, method: :get do %>
  <div class="sidebar-search col-md-6">
    <%= label_tag :search do %>
      <%= t ".label_search" %>
    <% end %>
    <%= text_field_tag :search, "", class: "form-control",
      placeholder: t(".search"), value: params[:search] %>
  </div>
  <div class="form-group col-md-3">
    <label><%= t ".by" %>:&ensp;</label>
    <%= select_tag :option, options_for_select(event_option, params[:option]), class: "form-control" %>
  </div>
  <div class="form-group col-md-3">
    <%= button_tag type: "submit",  class: "btn btn-primary btn-search" do %>
      <i class="fa fa-search"></i>
      <%= t ".btn_search" %>
    <% end %>
  </div>
<% end %>
