<div class="panel panel-default">
  <div class="panel-heading">
    <%= link_to managers_users_path do %>
      <i class="fa fa-bar-chart-o fa-fw"></i> <%= t ".table_name" %>
    <% end %>
  </div>
  <div class="panel-body">
    <div class="row">
      <div class="col-lg-12">
        <div class="table-responsive">
          <% if @users.present? %>
            <table class="table table-bordered table-hover table-striped" id="rooms-table">
              <thead>
                <tr>
                  <th>#</th>
                  <th><%= t ".name" %></th>
                  <th><%= t ".email" %></th>
                  <th><%= t ".group_name" %></th>
                  <th><%= t ".role" %></th>
                  <th><%= t ".created_at" %></th>
                  <th><%= t ".updated_at" %></th>
                  <th><%= t ".activated" %></th>
                  <th><%= t ".activated_at" %></th>
                </tr>
              </thead>
              <tbody>
                <%= render @users %>
              </tbody>
            </table>
            <%= paginate @users, theme: "twitter-bootstrap-3" %>
            <p class="help-block">
              <%= t(".total_record") %>: <%= @users.total_count %> -
              <%= page_sum @users %>
            </p>
            <p class="help-block"><%= record_sum @users %></p>
          <% else %>
            <p class="help-block"><%= t ".no_user" %></p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
