<%= form_for @room, url: yield(:room_path) do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <div class="form-group">
    <label><%= t ".name" %></label>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <label><%= t ".address" %></label>
    <%= f.text_field :address, {class: "form-control", rows: "3"} %>
  </div>
  <div class="form-group">
    <label><%= t ".location" %></label>
    <% if @locations.present? %>
      <%= f.select :location_id, options_for_select(@locations),
        {}, {class: "form-control"} %>
    <% else %>
      <p class="help-block"><%= t ".no_location" %></p>
    <% end %>
  </div>

  <%= render "managers/rooms/image_fields", f: f %>

  <%= f.submit t(".create"), class: "btn btn-success" %>
<% end %>
