<div class="panel panel-default">
  <div class="panel-heading">
    <i class="fa fa-bar-chart-o fa-fw"></i> <%= t ".table_name" %>
    <div class="pull-right">
      <div class="btn-group">
        <button type="button" class="btn btn-default btn-xs dropdown-toggle"
            data-toggle="dropdown">
          <%= t ".action" %>
          <span class="caret"></span>
        </button>
        <ul class="dropdown-menu pull-right" role="menu">
          <li>
            <%= link_to "#" do %>
              <i class="fa fa-plus"></i> <%= t ".add_new" %>
            <% end %>
          </li>
        </ul>
      </div>
    </div>
  </div>
  <div class="panel-body">
    <div class="row">
      <div class="col-lg-12">
        <div class="table-responsive">
          <table class="table table-bordered table-hover table-striped">
            <thead>
              <tr>
                <th>#</th>
                <th><%= t ".name" %></th>
                <th><%= t ".location" %></th>
                <th><%= t ".address" %></th>
                <th><%= t ".created_at" %></th>
                <th><%= t ".updated_at" %></th>
                <th><%= t ".edit" %></th>
                <th><%= t ".delete" %></th>
              </tr>
              </thead>
              <tbody>
              <% @rooms.each do |room| %>
                <tr>
                  <td><%= room[:id] %></td>
                  <td><%= room[:name] %></td>
                  <td><%= room[:location] %></td>
                  <td><%= room[:address] %></td>
                  <td><%= room[:created_at] %></td>
                  <td><%= room[:updated_at] %></td>
                  <td align="center">
                    <i style="cursor: pointer;"
                      class="fa fa-pencil-square-o fa-lg" aria-hidden="true">
                    </i>
                  </td>
                  <td align="center">
                    <i style="cursor: pointer;"
                      class="fa fa-trash fa-lg" aria-hidden="true">
                    </i>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
