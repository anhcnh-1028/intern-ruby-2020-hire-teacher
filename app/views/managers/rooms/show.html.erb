<%= provide :title, t(".title", name: @room.name) %>
<div class="row">
  <div class="col-lg-12">
    <div class="row">
      <div class="col-lg-11">
        <h1 class="page-header">
          <%= t ".room" %>: <%= @room.name %>
        </h1>
        <% if @images.present? %>
          <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
              <% @images.size.times do |i| %>
                <li data-target="#myCarousel" data-slide-to="<%= i %>"
                  class="<%= "active" if i==0 %>"></li>
              <% end %>
            </ol>
            <div class="carousel-inner" id="image-carousel">
              <% @images.each do |img| %>
                <div class="item <%= "active" if @images.first.id == img.id %>">
                  <%= image_tag(img.image.thumb.url, alt: "Image #{img.id}",
                    class: "image_carousel") if img.image? %>
                </div>
              <% end %>
            </div>
            <%= link_to "#myCarousel", {class: "left carousel-control",
              "data-slide": "prev"} do %>
              <span class="glyphicon-chevron-left fa fa-chevron-left fa-lg">
              </span>
              <span class="sr-only"><%= t ".prev" %></span>
            <% end %>
            <%= link_to "#myCarousel", {class: "right carousel-control",
              "data-slide": "next"} do %>
              <span class="glyphicon-chevron-right fa fa-chevron-right fa-lg">
              </span>
              <span class="sr-only"><%= t ".next" %></span>
            <% end %>
          </div>
        <% else %>
          <p class="help-block"><%= t ".no_img" %></p>
        <% end %>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-11">
        <div class="panel panel-default">
          <div class="panel-body">
            <address>
              <p>
                <i class="fa fa-home fa-lg"></i>
                <strong><%= t ".address" %>: <%= @room.address %></strong>
              </p>
              <p class="text-muted">
                <i class="fa fa-hand-o-right fa-lg"></i>
                <%= t ".location" %>: <%= @room.location_name %>
              </p>
              <p class="text-muted">
                <i class="fa fa-hand-o-right fa-lg"></i>
                <%= t ".country" %>: <%= @room.location.country_name %>
              </p>
              <p class="help-block">
                <small><%= t ".created_at" %>: <%= @room.created_at %></small>
              </p>
              <p class="help-block">
                <small><%= t ".updated_at" %>: <%= @room.updated_at %></small>
              </p>
            </address>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
