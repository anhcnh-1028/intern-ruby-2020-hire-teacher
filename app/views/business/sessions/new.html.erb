<% provide :title, t("log_in") %>
<div class="banner">
  <div class="container">
    <div class="wrapper">
      <div id="formContent">
        <div class="first">
          <%= image_tag Settings.image_name, id: "icon", alt: t("user_icon") %>
        </div>
        <%= form_for resource, as: resource_name, url: session_path(resource_name) do |f| %>
          <div class="field">
            <%= f.email_field :email, class: "form-feild", placeholder: t(".email"), required: :required, autofocus: true, autocomplete: "email" %>
          </div>

          <div class="field">
            <%= f.password_field :password, class: "form-feild", placeholder: t(".password"), required: :required, autocomplete: "current-password" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>

          <div class="actions">
            <%= f.submit t("log_in"), class: "btn_week destroy_event" %>
          </div>
        <% end %>
        <%= link_to t(".forgot_password"), new_user_password_path %>
        <div id="formFooter">
          <p><%= t ".you_haven't_account" %> <%= link_to t("sign_up"), new_user_registration_path, class: "underlineHover" %></p>
        </div>
      </div>
    </div>
  </div>
</div>
