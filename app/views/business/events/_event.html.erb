<ul class="list_event">
  <% (Settings.loop_4).each do |i| %>
    <li class="cd-schedule__group">
      <div class="cd-schedule__top-info"><span><%= (@monday + i).strftime(Settings.format_date) %></span></div>
      <ul>
        <% if @event_load.any? %>
          <% @event_load.each do |event_load| %>
            <% if event_load.date_event.strftime(Settings.format_date).eql? (@monday + i).strftime(Settings.format_date) %>
              <% if event_load.user_id.eql? current_user.id %>
                <li class="cd-schedule__event">
                  <a data-start="<%= event_load.start_time.to_s(:time) %>"
                    data-end="<%= event_load.end_time.to_s(:time) %>" data-event="event-<%= check_date event_load %>" href="#0">
                    <em class="cd-schedule__name"></em>
                  </a>
                </li>
              <% else %>
                <li class="cd-schedule__event">
                  <a data-start="<%= event_load.start_time.to_s(:time) %>"
                    data-end="<%= event_load.end_time.to_s(:time) %>" data-event="event-5" href="#0">
                    <em class="cd-schedule__name"></em>
                  </a>
                </li>
              <% end %>
            <% end %>
          <% end %>
        <% end %>
      </ul>
    </li>
  <% end %>
</ul>
