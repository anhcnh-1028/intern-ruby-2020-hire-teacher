<%= form_for @event_new, url: business_events_path do |f| %>
  <div class="form-row">
    <div class="form-group col-md-6">
      <%= f.label t(".title"), class: "form-group" %>
      <%= f.text_field :title, class: "form-group", required: :required %>
    </div>
    <div class="form-group col-md-6">
      <%= f.label t(".date_event"), class: "form-group" %>
      <%= f.text_field :date_event, type: "date", class: "form-group", required: :required %>
    </div>
  </div>
  <div class="form-row">
    <div class="form-group col-md-4">
      <%= f.label t(".start"), class: "form-group" %>
      <%= f.time_field :start_time, class: "form-group", required: :required %>
    </div>
    <div class="form-group col-md-4">
      <%= f.label t(".end"), class: "form-group" %>
      <%= f.time_field :end_time, class: "form-group", required: :required %>
    </div>
    <div class="form-group col-md-4">
      <%= f.label t(".color"), class: "form-group" %>
      <%= f.select :color, options_for_select([["Smalt Blue", 1], ["Martinique", 2], ["Edward", 3], ["Rajah", 4]]), class: "form-feild", required: :required %>
    </div>
  </div>
  <div class="form-row">
    <div class="form-group">
      <%= f.label t(".description"), class: "form-group" %>
      <%= f.text_area :description, class: "form-group",cols: "37", rows: "5", placeholder: "Write description for event ...", required: :required %>
    </div>
  </div>
  <div class="form-group">
    <div class="form-group col-md-6">
      <div class="dropdown">
        <button class="btn btn-invite dropdown-toggle" type="button" data-toggle="dropdown"> Invite guest
          <span class="caret"></span></button>
        <ul class="dropdown-menu scrollBox">
          <input class="form-control" id="myInput" type="text" placeholder="Search..">
          <p><strong>Co tat ca : <%= @users.size %> nhan vien</strong></p>
          <% @users.each do |user| %>
              <li>
                <%= link_to_add_association f, :guests, render_options: {locals: { user_profile: user.name, user_id: user.id }} do %>
                  <%= image_tag "avatar.png", class: "avatar-box-invite", size: "35" %>
                  <%= user.name %>
                <% end %>
              </li>
          <% end %>
        </ul>
      </div>
    </div>
    <div class="form-group col-md-6">
      <div id="list-invite" data-placeholder="  List invited . . . "></div>
    </div>
  </div>
  <%= f.hidden_field :user_id, value: session[:user_id] %>
  <%= f.hidden_field :room_id, value: @room.id %>
  <%= f.hidden_field :day, value: @monday %>
  <div class="modal-footer">
    <button type="button" class="btn_week btn_close" data-dismiss="modal"><%= t ".close" %></button>
    <%= f.submit t(".add_event"), id: "add_event", class:"btn_week create_event" %>
  </div>
<% end %>
