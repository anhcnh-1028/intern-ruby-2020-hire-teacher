<%= form_for :event_new, url: business_events_path do |f| %>
  <%= f.label t(".title"), class: "form-group" %>
  <%= f.text_field :title, class: "form-group", required: :required %>
  <%= f.label t(".date_event"), class: "form-group" %>
  <%= f.text_field :date_event, type: "date", class: "form-group", required: :required %>
  <%= f.label t(".start"), class: "form-group" %>
  <%= f.time_field :start_time, min: "08:00", max: "18:00", class: "form-group", required: :required %>
  <%= f.label t(".end"), class: "form-group label_end" %>
  <%= f.time_field :end_time, min: "08:00", max: "18:00", class: "form-group time_end", required: :required %>
  <%= f.label t(".description"), class: "form-group" %>
  <%= f.text_area :description, class: "form-group", required: :required %>
  <%= f.label t(".color"), class: "form-group" %>
  <%= f.select :color, options_for_select(Settings.array_color),
               class: "form-feild", required: :required %>
  <%= f.hidden_field :user_id, value: session[:user_id] %>
  <%= f.hidden_field :room_id, value: @room.id %>
</div>
<div class="modal-footer">
  <button type="button" class="btn_close" data-dismiss="modal"><%= t ".close" %></button>
  <%= f.submit t(".add_event"), id: "add_event" %>
<% end %>
