@font-face {
  font-family: 'Glyphicons Halflings';
  src: font_url('<%= font_path("glyphicons-halflings-regular.eot") %>');
  src: font_url('<%= font_path("glyphicons-halflings-regular.eot") + "?#iefix" %>') format('eot'),
  font_url('<%= font_path("glyphicons-halflings-regular.woff") %>') format('woff'),
  font_url('<%= font_path("glyphicons-halflings-regular.woff2") %>') format('woff2'),
  font_url('<%= font_path("glyphicons-halflings-regular.ttf") %>') format('truetype'),
  font_url('<%= font_path("glyphicons-halflings-regular.svg") + "#glyphicons_halflingsregular" %>') format('svg');
}

@font-face {
  font-family: "FontAwesome";
  src: font_url('<%= font_path("fontawesome-webfont.eot") %>');
  src: url('<%= font_path('fontawesome-webfont.eot') %>?#iefix') format('embedded-opentype'),
  url('<%= font_path('fontawesome-webfont.woff2') %>') format('woff2'),
  url('<%= font_path('fontawesome-webfont.woff') %>') format('woff'),
  url('<%= font_path('fontawesome-webfont.ttf') %>') format('truetype'),
  url('<%= font_path('fontawesome-webfont.svg') %>#fontawesomeregular') format('svg');
  font-weight: normal;
  font-style: normal;
}
